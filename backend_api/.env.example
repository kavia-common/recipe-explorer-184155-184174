# Backend API environment variables
# Copy this file to .env and adjust values for your environment.

# HMAC signing key for tokens (change in production)
SECRET_KEY=dev-secret-key-change

# Access token expiration in minutes
TOKEN_EXP_MINUTES=720

# Comma-separated list of allowed CORS origins (use * for all)
CORS_ALLOW_ORIGINS=*

# Public site URL (used for email redirects; not used by this service directly)
SITE_URL=http://localhost:3000
